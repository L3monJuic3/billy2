<div class="landing-background w-screen h-screen">
  <div class="customer-container h-full flex flex-col justify-between">
    <div class="w-full h-48"></div>
    <h2 class="flex w-full justify-center items-center text-2xl font-bold"><%= @restaurant.name %></h2>

      <%= simple_form_for [@restaurant, @table, @table_order, @table_customer] do |f| %>
        <%  if @table_order.table_customers.empty? %>
          <%= f.input :is_captain, as: :hidden, default: true %>
        <%  end %>
        <%= f.input :is_paid, as: :hidden, default: false %>
        <div class="flex flex-col justify-end w-full h-48">
          <div class="w-full">
            <%= f.input :name,
                        label: false,
                        placeholder: "Name" %>
          </div>
          <div class="flex w-full justify-center items-center h-10 rounded-lg bg-black">
            <%= f.submit "Go", class: "text-lg font-bold text-white" %>
          </div>
        </div>
      <% end %>
  </div>
</div>
