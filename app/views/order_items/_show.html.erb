<div class="flex flex-col items-center justify-center font-semibold">
  <p class="mr-1"><%= item.id %></p>
  <p class="text-center"><%= MenuItem.find(item.menu_item_id).name %></p>
</div>
<div class="flex justify-center mb-2">
  <p>Table <%= item.table.table_number %></p>
</div>
<div class="flex justify-center border p-10">
  <%= item.note %>
</div>
<div class="flex justify-center my-3">
  <%= link_to "Mark as done", prepared_path(item), class: "bg-gray-900 px-10 py-2 text-white rounded-lg" %>
</div>
