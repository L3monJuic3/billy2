<div class="container flex-end">
  <h1>Menus</h1>
  <% @menus.each do |menu| %>
    <li>
      <%= link_to menu.name, restaurant_menu_path(@restaurant, menu) %>
    </li>
  <% end %>

  <div class="mt-5">
    <%= link_to "Add New Menu", new_restaurant_menu_path(@restaurant), class: "p-3 border" %>
  </div>

  <div>
    <h1 class="text-2xl">Display Menu name and menu items</h1>


    <div>
      <% @restaurant.menu_items.each do |item| %>
  <p> <%= item.name %> </p>
      <% end %>
    </div>
  </div>
</div>
