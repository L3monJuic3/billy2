<div class="restaurant-container">
  <div class="flex justify-between mt-4">
    <h2 class="text-xl font-bold">Menu Items</h2>
    <h2 class="text-xl font-bold">Menus</h2>
  </div>
  <div class="flex gap-5">
    <div class="w-2/3 bg-white flex flex-wrap content-start rounded-lg mt-4 mb-8 px-4">
      <% @restaurant.menu_items.each do |item| %>
        <div class="w-6/12 flex items-center mt-4">
          <div class="mr-5">
            <img src=<%= "https://source.unsplash.com/random/75x75/?restaurant-#{item.name}" %> class="d-block rounded-xl" alt="restaurant image">
          </div>
          <div>
            <p class="font-bold text-sm"><%= item.name %></p>
            <p class="text-sm">$<%= item.price %></p>
          </div>
        </div>
      <% end %>
    </div>
    <div class="w-1/3 bg-white rounded-lg mt-4 mb-8 px-4">
      <% @menus.each do |menu| %>
        <div class="mt-4">
          <%= link_to restaurant_menu_path(@restaurant, menu) do  %>
            <div>
              <img src=<%= "https://source.unsplash.com/random/400x150/?restaurant-#{menu.id}" %> class="d-block rounded-2xl" alt="restaurant image">
            </div>
            <p class="text-right text-lg font-bold mt-1"><%= menu.name %></p>
          <% end %>
        </div>
      <% end %>
      <div class="mt-5">
        <%= link_to "Add New Menu", new_restaurant_menu_path(@restaurant), class: "p-3 border" %>
      </div>
    </div>
  </div>
</div>
