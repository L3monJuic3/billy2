      <%= link_to restaurant_path(@restaurant) do %>
        <i class="fa-solid fa-chevron-left"></i>
      <% end %>
    </div>

    <h2 class="text-xl font-bold"><%= @menu.name %></h2>

    <div class="flex justify-end w-48">
      <%= link_to restaurant_menu_path(@restaurant, @menu), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
        <h2>Delete Menu</h2>
      <% end %>
    </div>
  </div>

