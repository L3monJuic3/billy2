<div class="page-container pt-8">
  <div class="flex items-center justify-between mb-8">
    <div class="w-48">
      <%= link_to restaurant_path(@restaurant) do %>
        <i class="fa-solid fa-chevron-left"></i>
      <% end %>
    </div>

    <h2 class="text-xl font-bold"><%= @menu.name %></h2>

    <div class="flex justify-end w-48">
      <%= link_to restaurant_menu_path(@restaurant, @menu), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
        <h2>Delete Menu</h2>
      <% end %>
    </div>
  </div>

  <%= render "join_menus/item", menu: @menu %>

  <div class="flex justify-center mt-8">
    <%= link_to new_restaurant_menu_join_menu_path(@restaurant, @menu) do %>
      <div class="flex justify-center items-center w-10 h-10 rounded-full bg-black">
        <i class="fa-solid fa-plus text-white"></i>
      </div>
     <% end %>
  </div>
</div>
