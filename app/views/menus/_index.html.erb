<div class="flex gap-5">
  <div class="w-2/3 bg-white rounded-lg h-min">
    <div class="m-8">
      <h2 class="text-xl font-bold mb-3">Menu Items</h2>

      <div class="flex flex-wrap content-start overflow-auto scroll-container">
        <% restaurant.menu_items.each do |item| %>
          <div class="w-6/12 flex items-center mt-4" type="button" data-bs-toggle="modal" data-bs-target=<%= "#exampleModal#{item.name}" %>>
            <div class="mr-5">
              <img src=<%= "https://source.unsplash.com/random/75x75/?restaurant-#{item.name}" %> class="d-block rounded-lg" alt="restaurant image">
            </div>
            <div>
              <p class="font-bold text-sm"><%= item.name %></p>
              <p class="text-sm">$<%= item.price %></p>
            </div>
          </div>

          <!-- Modal -->
          <div class="modal fade" id=<%= "exampleModal#{item.name}" %> tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content flex flex-col justify-center items-center rounded-2xl py-12">
                <div>
                  <img src=<%= "https://source.unsplash.com/random/150x150/?restaurant-#{item.name}" %> class="d-block rounded-lg" alt="restaurant image">
                </div>
                <div class="w-7/12 mt-3">
                  <h5 class="text-center text-xl font-bold" id="exampleModalLabel"><%= item.name %></h5>
                  <p class="text-center mt-2"><%= item.description %></p>
                  <p class="text-center text-xl font-bold mt-2">$<%= item.price %></p>
                </div>
                <div>
                  <button type="button" class="bg-black px-5 py-2 text-white rounded-lg mt-3" data-bs-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <%# <div class="flex justify-center items-center bg-white rounded-bl-lg rounded-br-lg p-8 border border-black z-10">
      <div class="flex justify-center items-center w-10 h-10 rounded-full bg-black">
        <i class="fa-solid fa-plus text-white"></i>
      </div>
    </div> %>
  </div>

  <div class="w-1/3 bg-white rounded-lg h-min">
    <div class="m-8">
      <h2 class="text-xl font-bold mb-3">Menus</h2>

      <div class="flex-wrap content-start overflow-auto scroll-container">
        <% menus.each do |menu| %>
          <div class="mt-4">
            <%= link_to restaurant_menu_path(restaurant, menu) do  %>
              <div>
                <img src=<%= "https://source.unsplash.com/random/400x150/?restaurant-#{menu.id}" %> class="d-block rounded-lg" alt="restaurant image">
              </div>
              <p class="text-right text-lg font-bold mt-1"><%= menu.name %></p>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="flex justify-center items-center bg-white rounded-bl-lg rounded-br-lg p-8 border border-black z-10">
      <%= link_to new_restaurant_menu_path(restaurant) do %>
        <div class="flex justify-center items-center w-10 h-10 rounded-full bg-black">
          <i class="fa-solid fa-plus text-white"></i>
        </div>
      <% end %>
    </div>
  </div>
</div>
