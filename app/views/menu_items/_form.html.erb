<%= simple_form_for [restaurant, menu_item] do |f| %>
  <div>
    <%= f.input :name %>
  </div>
  <div class="flex justify-start items-center pt-8">
    <div class="flex justify-center items-center h-10 rounded-lg bg-black">
      <%= f.submit menu_item.id.nil? ? "Create" : "Save", class: "text-xl font-bold mx-8 text-white" %>
    </div>
  </div>
<% end %>
